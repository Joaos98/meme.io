<!doctype html>
<html>
<head>
    <% include components/projectDefaultHead/projectDefaultHead %>
    <title>meme.io - Perfil do Meme></title>
</head>
<body>
<% if (usuario) { %>
    <% include components/headerUsuario/headerUsuario.ejs %>
<% }else{ %>
    <% include components/headerVisitante/headerVisitante.ejs %>
<% } %>

<main>
    <div class="container">
        <div id="memeCard" style="position:relative;" class="border-memeProfile rounded">
            <div class="row">
                <div class="col-sm-2">
                    <img src="<%= meme.urlimgur%>">
                </div>
                <div class="col-sm-9">
                <div class="row">
                    <h4>Categorias:</h4>
                </div>
                    <div class="row">
                        <% meme.categorias.forEach(categoria => { %>
                            <span class="categoria" style="margin-right: 3px;">#<%= categoria %> </span>
                        <% }) %>
                    </div>
                <div class="row" style="margin-top: 5px;">
                    <h4>Adicionado em:
                        <%= meme.data %>
                    </h4>
                </div>
            </div>
        </div>
            <div style="position: absolute; right: 15px; top: 15px;">
                <% if (usuario) { %>
                    <% if (seguidores.includes(usuario.id_usuario+"")) { %>
                        <button onclick="seguirMeme('<%= meme.id_meme %>', '<%= usuario.id_usuario %>', this)" class="btn btn-memeIO">Seguindo</button>
                    <% } else { %>
                        <button onclick="seguirMeme('<%= meme.id_meme %>', '<%= usuario.id_usuario %>', this)" class="btn btn-memeIO">Seguir</button>
                    <% } %>
                <% } %>
                <a target="_blank" class="btn btn-memeIO" href="<%= meme.urlimgur%>">
                    <i class="fas fa-external-link-alt"></i>
                </a>
            </div>
        </div>
        <div id="" class="feed">
            <% include components/feed/feed.ejs %>
        </div>
    </div>
</main>

<% include components/footer/projectDefaultFooter.ejs %>
<% include components/projectDefaultScripts/projectDefaultScripts.ejs %>
</body>
</html>
